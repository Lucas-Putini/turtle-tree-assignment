{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "ros2",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "containerEnv": {
        // display setting on Linux (default)
        // "DISPLAY": "${env:DISPLAY}",
        // display setting with X11 forwarding
        "DISPLAY": "host.docker.internal:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [],
    "initializeCommand": "xhost +",
    "onCreateCommand": "mkdir -p /home/ros2/.devcontainer",
    "workspaceFolder": "/home/ros2/.devcontainer",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ros2/.devcontainer,type=bind,consistency=cached",
    "mounts": [
        "source=${localWorkspaceFolder}/src,target=/home/ros2/ws/src/ros_tutorial/src,type=bind,consistency=cached"
    ],
    "postCreateCommand": "sudo chown -R ros2:ros2 /home/ros2/ws",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "spencerwmiles.vscode-task-buttons"
            ]
        }
    }
}
