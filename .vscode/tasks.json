{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run turtlesim",
            "type": "shell",
            "command": "ros2 run turtlesim turtlesim_node",
            "options": {
                "env": {
                    "QT_X11_NO_MITSHM": "1",
                    "LIBGL_ALWAYS_SOFTWARE": "1",
                    "LIBGL_ALWAYS_INDIRECT": "1"
                }
            }
        },
        {
            "label": "run behavior tree",
            "type": "shell",
            "command": "source /home/ros2/ws/install/setup.bash && ros2 run turtle_tree_tutorial behavior_tree hslu_setup.xml && sleep 0.3 && ros2 run turtle_tree_tutorial behavior_tree hslu_draw.xml"
        },
        {
            "label": "run behavior tree (example)",
            "type": "shell",
            "command": "source /home/ros2/ws/install/setup.bash && ros2 run turtle_tree_tutorial behavior_tree example.xml"
        },
        {
            "label": "colcon build",
            "type": "shell",
            "command": [
                "cd /home/ros2/ws;",
                "colcon build",
                "--event-handlers console_cohesion+",
                "--cmake-args -DCMAKE_BUILD_TYPE=Debug"
            ]
        }
    ]
}
